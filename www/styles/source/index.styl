// Global Variables

bar-height = 50px

// Styles

html
body
    font-family: Roboto
    height: 100%
    margin: 0
    width: 100%
    -webkit-user-select: none

.frame
.topbar
    height: bar-height
    line-height: bar-height
    overflow: hidden
    vertical-align: middle
    width: 100%

.frame
    background-color: #555555
    -webkit-app-region: drag

.topbar
    background-color: #3498db

.frame nav.left
    box-sizing: border-box
    display: block
    float: left
    height: 100%
    padding: 0 16px
    width: 100px

.frame nav.left .btn-os
    background-color: #999999
    border: 0
    border-radius: 6px
    cursor: pointer
    display: inline-block
    height: 12px
    outline: 0
    width: 12px

    &.close:hover
        background: #e74c3c

    &.max:hover
        background: #27ae60

    &.min:hover
        background: #f1c40f

.frame nav.right
    display: block
    float: right
    height: 100%
    margin: 0
    text-align: right
    width: 100px

.frame nav.right .fullscreen
    background-color: transparent
    border: 0
    color: #ffffff
    cursor: pointer
    display: inline-block
    font-size: 16px
    text-align: center
    width: 48px

.frame h1
    color: #ffffff
    cursor: default
    display: block
    font-size: 18px
    font-weight: 100
    margin: 0 auto
    text-align: center
